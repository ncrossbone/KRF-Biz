<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ce.krf.biz.mapper.BookmarkMapper">
    <select id="getBookmark" resultType="hashmap" parameterType="com.ce.krf.biz.model.BookmarkVO">
    	SELECT SN,
    		   USER_ID,
    		   TM_XAXS,
    		   TM_YAXS,
    		   SC,BKMK_NM,
    		   SUMRY_DC,
    		   RM,REGISTER_ID,
    		   REGIST_DT,
    		   CHANGER_ID,
    		   CHANGE_DT 
    	  FROM TGS_BKMK_INFO
    	 WHERE USER_ID = #{userId}
    </select>
    
    <insert id="putBookmark" parameterType="String">
        INSERT INTO TGS_BKMK_INFO (SN,USER_ID,TM_XAXS,TM_YAXS,SC,BKMK_NM,SUMRY_DC,RM,REGISTER_ID,REGIST_DT,CHANGER_ID,CHANGE_DT) VALUES (TO_CHAR(SYSDATE,'YYYYMMDDHH24MISS'),#{userId},1,1,1,1,1,#{param},1,SYSDATE,1,SYSDATE)
    </insert>
    
     <insert id="deleteBookmark" parameterType="String">
        DELETE 
          FROM TGS_BKMK_INFO 
         WHERE SN = #{sn} AND USER_ID = #{userId}
    </insert>
</mapper>